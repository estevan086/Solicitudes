<mvc:View
	controllerName="com.Solicitudes.controller.Detail"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:t="sap.ui.table">
	<semantic:DetailPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="{device>/system/phone}"
		title="{i18n>detailTitle}"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				responsive="true"
				title="{SolicitudId}"
				numberUnit="{Estado}">
				<attributes>
					<ObjectAttribute
    				title="Nombre"
    				text="{NombrePersona}"/>
					<ObjectAttribute
    				title="Número Persona"
    				text="{NumeroPersona}"/>
					<ObjectAttribute
    				title="Tipo de Solicitud"
    				text="{TipoSol}"/>
					<ObjectAttribute
    				title="Fecha"
    				text="{FechaActual}"/>
				</attributes>
				<statuses>
					<ObjectStatus
        				title="Estado"
        				text="{Estado}"
        				state="Warning"/>
				</statuses>
			</ObjectHeader>
			<IconTabBar
				id="iconTabBar"
				class="sapUiResponsiveContentPadding"
				expanded="true" 
                expandable="false">
				<items>
					<IconTabFilter
						id="iconTabBarFilter1"
						icon="sap-icon://hint"
						tooltip="{i18n>detailIconTabBarInfo}">
						<Text text="Comentarios" />
						<TextArea value="Solicitud Prueba " growing="true" growingMaxLines="7" width="100%"/>
						<t:Table
				id="TableMisTallas"
				rows="{DetalleSol>/items}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				ariaLabelledBy="title">
							<t:toolbar>
								<Toolbar>
									<Title id="title" text="Materiales"></Title>
									<ToolbarSpacer/>
								</Toolbar>
							</t:toolbar>
							<t:columns>
								<t:Column>
									<Label text="Area Dotación" />
									<t:template>
										<Text text="{DetalleSol>area}" wrapping="true"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="Material" />
									<t:template>
										<Text text="{DetalleSol>material}" wrapping="true"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="Talla" />
									<t:template>
										<Text text="{DetalleSol>talla}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column hAlign="Start">
									<Label text="Unidad de Medidad" />
									<t:template>
										<Text text="{DetalleSol>unidad}" wrapping="false"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</IconTabFilter>
					<IconTabFilter
						id="iconTabBarFilter2"
						icon="sap-icon://attachment"
						tooltip="{i18n>detailIconTabBarAttachments}">
						<Button id="btnDownload" enabled="true" type="Emphasized" press="fnDownload" text="Descargar PDF" icon="sap-icon://download"/>
						
					</IconTabFilter>
					<IconTabFilter
						id="iconTabBarFilter3"
						icon="sap-icon://history"
						tooltip="{i18n>detailIconTabBarInfo}">
						<t:Table
				id="TableLog"
				rows="{Log>/items}"
				selectionMode="MultiToggle"
				visibleRowCount="7"
				ariaLabelledBy="title">
							<t:toolbar>
								<Toolbar>
									<Title id="title2" text="Movimientos de Solicitud"></Title>
									<ToolbarSpacer/>
								</Toolbar>
							</t:toolbar>
							<t:columns>
								<t:Column>
									<Label text="Fecha" />
									<t:template>
										<Text text="{Log>fecha}" wrapping="true"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="Hora" />
									<t:template>
										<Text text="{Log>hora}" wrapping="true"/>
									</t:template>
								</t:Column>
								<t:Column>
									<Label text="Usuario" />
									<t:template>
										<Text text="{Log>usuario}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column hAlign="Start">
									<Label text="Estado" />
									<t:template>
										<Text text="{Log>estado}" wrapping="false"/>
									</t:template>
								</t:Column>
								<t:Column hAlign="Start">
									<Label text="Comentario" />
									<t:template>
										<Text text="{Log>comentario}" wrapping="false"/>
									</t:template>
								</t:Column>
							</t:columns>
						</t:Table>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</semantic:content>
		<semantic:positiveAction>
			<semantic:PositiveAction text="Aprobar" press="onAprobarButtonPress"/>
		</semantic:positiveAction>
		<semantic:negativeAction>
			<semantic:NegativeAction text="Rechazar" press="onRechazarButtonPress"/>
		</semantic:negativeAction>
	</semantic:DetailPage>
</mvc:View>